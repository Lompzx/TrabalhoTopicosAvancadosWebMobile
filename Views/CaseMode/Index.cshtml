@model IEnumerable<CaseModeModel>

<div class="row">
    <div class="col-lg-12">
        <a href="/CaseMode/Create" class="btn btn-info">Adicionar</a>
    </div>
</div>
<br/>

<div class="container">    
    <div class="row d-flex justify-content-center">
        @foreach (var item in Model)
        {            
            <div class="card-group" style="margin: 5px;">
                <div class="card" style="width: 18rem; padding: 1px;">
                    <img style="max-height: 250px;" src="@item.ImageUrl" class="card-img-top" alt="@item.ImageUrl">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h3>R$@item.Price</h3>
                            <p class="card-text">@item.Description.</p>                            
                        </div>
                        <div class="card-footer">
                            <a href="/CaseMode/detail/@item.Id"  class="card-text"><small class="text-muted">Detalhes..</small></a>
                        </div>
                </div>                    
            </div>            
        }    
    </div>
</div>



